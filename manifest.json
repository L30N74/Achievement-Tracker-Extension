{
	"manifest_version": 3,
	"name": "achievement_tracker",
	"description": "Add achievements on the google sheets document",
	"version": "1.0",
    "action": {
        "default_popup": "./pages/popup.html",
        "default_icon": "./images/laptop-code-solid.svg"
    },
    "oauth2": {
        "client_id": "481953780688-qdpis74d45nu9j6i9mipjicg27cmoudl.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/userinfo.email",
            "https://www.googleapis.com/auth/spreadsheets"
        ]
    },
    "permissions": [
        "identity",
        "contextMenus"
    ],
    "background": {
        "service_worker": "./scripts/contextMenu.js"
    }
}
